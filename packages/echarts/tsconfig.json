{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strict": false,
    "moduleResolution": "node",
    "module": "ES2020",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "dom"
    ],
    "isolatedModules": false,
    "importsNotUsedAsValues": "remove"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typedocOptions": {        
    "entryPoints": ["src/index.ts"],
    "out": "documentation"
  }
}
